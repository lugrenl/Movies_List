<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1E26"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MovieDetailsActivity">

    <ImageView
        android:id="@+id/movie_poster_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/joker"
        tools:ignore="ContentDescription" />

    <!-- Затемнение для лучшей читаемости текста -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <!-- Контейнер для основной информации -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_above="@id/actors_board"
        android:padding="16dp">

        <TextView
            android:id="@+id/age_limit_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/age"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#999999"
            android:background="#40000000"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp" />

        <TextView
            android:id="@+id/movie_title_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/film_name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="16dp" />

        <RatingBar
            android:id="@+id/movie_rating_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:rating="4.5"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/movie_genre_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/genre"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/storyline_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/storyline"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:gravity="start"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/storyline_text_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/storyline_text_details"
            android:textSize="16sp"
            android:textColor="#999999"
            android:gravity="start"
            android:maxLines="2"
            android:layout_marginTop="16dp" />

    </LinearLayout>

    <!-- Контейнер для актеров внизу экрана -->
    <LinearLayout
        android:id="@+id/actors_board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="#111111">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cast_and_crew"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="8dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp">

            <LinearLayout
                android:id="@+id/actors_grid_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="48dp">

                <!-- Карточки актеров -->
                <include
                    layout="@layout/item_actor_card"
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    android:layout_marginEnd="12dp" />

                <include
                    layout="@layout/item_actor_card"
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    android:layout_marginEnd="12dp" />

                <include
                    layout="@layout/item_actor_card"
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    android:layout_marginEnd="12dp" />

                <include
                    layout="@layout/item_actor_card"
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    android:layout_marginEnd="12dp" />

                <include
                    layout="@layout/item_actor_card"
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    android:layout_marginEnd="12dp" />

                <include
                    layout="@layout/item_actor_card"
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    android:layout_marginEnd="16dp" />

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

</RelativeLayout>